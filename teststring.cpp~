#include <iostream>
#include <string>

using namespace std;

int main()
{
  cout<<"Please enter the chord notes:  ";
  string n;
  cin>>n;

  int drm[n.length()];

  for(int i=0;i<n.length();i++)
    {
      if(n.at(i)>='a'&&n.at(i)<='g')
	{
	  drm[i]=n.at(i)-'a';
	}
      else if(n.at(i)>='A'&&n.at(i)<='G')
	{
	  drm[i]=n.at(i)-'A';
	}
    }

